{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "test": {},
    "size": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "pretty": {
      "cache": false
    },
    "publish": {
      "dependsOn": ["^build", "lint", "pretty"]
    }
  }
}
